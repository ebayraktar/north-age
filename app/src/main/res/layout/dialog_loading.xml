<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_toEndOf="@id/av_splash_animation"
        android:gravity="center" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_splash_animation"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        app:lottie_autoPlay="true"
        app:lottie_fileName="719-loading.json"
        app:lottie_loop="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCancel"
        style="@style/buttonCardView"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_below="@id/av_splash_animation"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tvNegative"
            style="@style/buttonText"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>